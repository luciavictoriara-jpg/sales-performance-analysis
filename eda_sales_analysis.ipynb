# EDA Sales Analysis - Junior Data Analyst Project

import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

# Load dataset
df = pd.read_csv('../data/sales_data.csv')

# Create Revenue column
df['Revenue'] = df['Quantity'] * df['UnitPrice']

# -----------------------
# 1. Sales over time
# -----------------------
df['InvoiceDate'] = pd.to_datetime(df['InvoiceDate'])
sales_by_month = df.groupby(df['InvoiceDate'].dt.to_period('M'))['Revenue'].sum()
sales_by_month.plot(kind='line', marker='o')
plt.title('Monthly Revenue')
plt.ylabel('Revenue')
plt.xlabel('Month')
plt.show()

# -----------------------
# 2. Top products by revenue
# -----------------------
top_products = df.groupby('Description')['Revenue'].sum().sort_values(ascending=False)
top_products.plot(kind='bar', color='skyblue')
plt.title('Top Products by Revenue')
plt.ylabel('Revenue')
plt.xlabel('Product')
plt.show()

# -----------------------
# 3. Top customers
# -----------------------
top_customers = df.groupby('CustomerID')['Revenue'].sum().sort_values(ascending=False).head(10)
top_customers.plot(kind='bar', color='orange')
plt.title('Top 10 Customers by Revenue')
plt.ylabel('Revenue')
plt.xlabel('CustomerID')
plt.show()

# -----------------------
# 4. Sales by country
# -----------------------
sales_by_country = df.groupby('Country')['Revenue'].sum()
sales_by_country.plot(kind='pie', autopct='%1.1f%%', startangle=90)
plt.title('Revenue by Country')
plt.ylabel('')
plt.show()
